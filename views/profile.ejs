<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>profile Page</title>
    <link rel="stylesheet" href="/stylesheets/profile.css" />
  </head>
  <body>
    <div class="containerpers">
      <div class="cardpers">
        <div class="profile-picture">
          <img
            src="https://images.unsplash.com/photo-1444703686981-a3abbc4d4fe3?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
            alt="Profile Picture"
          />
        </div>
        <h2 class="name"><%= user.fullname %></h2>
        <h3 class="username">@<%= user.username %></h3>
        <p class="tagline">Be Bad Be A Champion</p>
        <p class="description">
          Kill Them With Your Success,Bury Them With Your Smile
        </p>
        <a href="/logout" class="button">Logout</a>

        <form action="/upload" method="post" enctype="multipart/form-data">
          <input type="text" name="filecaption" placeholder="some caption" />
          <input type="file" name="file" />
          <input type="submit" />
        </form>
      </div>
    </div>

    <div class="container">
      <div class="cards flex">
        <% user.posts.forEach(function(post){ %>
        <div class="card">
          <img src="/images/uploads/<%= post.image %>" alt="Card Image" />
          <div class="card-content">
            <h2 class="card-title"><%= post.imageText %></h2>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
